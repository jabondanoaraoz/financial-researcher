  "auto_mapping_rules": {
    "description": "Rules for automatically assigning peer groups based on company characteristics",
    "rules": [
      {
        "rule_name": "Mega Cap Tech",
        "if_sector": "Technology",
        "and_market_cap_gt": 1000000000000,
        "then_group": "technology.mega_cap_tech"
      },
      {
        "rule_name": "High Growth SaaS / Cloud",
        "if_industry_contains": ["Software", "Data", "Cloud"],
        "and_revenue_growth_gt": 0.30,
        "and_gross_margin_gt": 0.60,
        "then_group": "high_growth_innovation.saas_observability_devops"
      },
      {
        "rule_name": "Fintech Disruptor",
        "if_sector": "Financial Services",
        "and_revenue_growth_gt": 0.20,
        "and_price_to_book_gt": 4.0,
        "then_group": "high_growth_innovation.fintech_disruptors"
      },
      {
        "rule_name": "Legacy Banking (Value)",
        "if_industry_contains": "Banks",
        "and_dividend_yield_gt": 0.02,
        "and_pe_ratio_lt": 15,
        "then_group": "finance.regional_banks"
      },
      {
        "rule_name": "Biotech Speculative",
        "if_sector": "Healthcare",
        "and_revenue_lt": 1000000000,
        "and_profit_margin_lt": 0,
        "then_group": "healthcare.biotech"
      },
      {
        "rule_name": "Semiconductor Pure Play",
        "if_industry_contains": "Semiconductor",
        "then_group": "technology.semi_compute_datacenter"
      }
    ]
